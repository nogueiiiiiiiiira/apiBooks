generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//npx prisma migrate dev
//prisma db push

model Book {
  id Int @id @default(autoincrement())
  nome String
  descricao String
  autor String
  valor String
  categoria String
  estoque String
  criadoEm DateTime
}

model Librarian {
  id Int @id @default(autoincrement())
  nome String
  cpf String
  email String
  telefone String
  dataNasc DateTime
  senha String
  criadoEm DateTime
}

model Loan {
  id Int @id @default(autoincrement())
  cpf String
  idLivro String
  dataEmp DateTime
  dataDev DateTime
}

model Reader {
  id Int @id @default(autoincrement())
  nome String
  cpf String
  email String
  telefone String
  dataNasc DateTime
  criadoEm DateTime
}

model Return {
  id Int @id @default(autoincrement())
  cpf String
  idLivro String
  prevDev DateTime
  dataAtual DateTime
  multaAtribuida String
}

model Fine {
  id Int @id @default(autoincrement())
  cpf String
  idLivro String
  diasAtra String
  total Float
  statusPag String
  criadoEm DateTime
}