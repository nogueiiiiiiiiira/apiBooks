generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//npx prisma migrate dev
//prisma db push

model Book {
  id Int @id @default(autoincrement())
  nome String
  descricao String
  autor String
  valor String
  categoria String
  estoque String
}

model Librarian {
  id Int @id @default(autoincrement())
  nome String
  cpf String
  email String
  telefone String
  dataNasc DateTime
  senha String
}

model Loan {
  id Int @id @default(autoincrement())
  cpf String
  idLivro Int
  dataEmp DateTime
  dataDev DateTime
}

model Reader {
  id Int @id @default(autoincrement())
  nome String
  cpf String
  email String
  telefone String
  dataNasc DateTime
}